// calculating simple interest
#include <stdio.h>

int main(){
    int t;
    float p,r,si;

    printf("enter principle\n:");
    scanf("%f",&p);

    printf("enter rate\n:");
    scanf("%f",&r);

    printf("enter time\n:");
    scanf("%d",&t);

    si=(p*t*r)/100;

    printf("%f",si);


    return 0;






}
